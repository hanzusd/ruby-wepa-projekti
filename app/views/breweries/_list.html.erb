<table class="table table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th>Founded</th>
    <th># of Beers</th>
    <th>Active</th>
  </tr>
  </thead>

  <tbody>
  <% breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= brewery.year %></td>
        <td><%= brewery.beers.count() %> </td>
        <td><%= brewery.active %> </td>
        <td></td>
      </tr>
  <% end %>
  </tbody>
</table>
